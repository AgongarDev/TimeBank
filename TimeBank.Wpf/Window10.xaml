<Window x:Class="TimeBank.Wpf.Window10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeBank.Wpf"
        mc:Ignorable="d"
        Title="Window10" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="87" VerticalAlignment="Top" Width="803" Fill="#FF79A386" Margin="0,1,0,0"/>
        <TextBlock x:Name="TiltleApp" HorizontalAlignment="Center" Margin="0,10,0,0" Text="Bank of Time" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="{DynamicResource TextBlockFontFamily1}" Height="75" Width="226" FontSize="60
                   "/>
        <Image Height="44" Margin="702,27,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="44" Source="/boton_cuenta.png"/>
        <TextBox HorizontalAlignment="Left" Margin="320,106,0,0" Text="Demandar Servicio" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" FontFamily="Carmilla" FontSize="30" Height="46" Foreground="#FF79A386" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged"/>
        <Rectangle HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="812" Fill="#FF79A386" Margin="0,379,0,0"/>
        <Image Height="61" Margin="25,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="61" Source="/home_white-01.png"/>
        <TextBox HorizontalAlignment="Left" Margin="346,157,0,0" Text="Tokens" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Noto Sans" FontSize="16" Foreground="#FF79A386" BorderBrush="{x:Null}" Background="{x:Null}" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <Button Content="Comprobar saldo" HorizontalAlignment="Left" Height="30" Margin="471,157,0,0" VerticalAlignment="Top" Width="167" Background="#FFA5DAC9" BorderBrush="{x:Null}" Foreground="White" FontFamily="Noto Sans" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="470,191,0,0" Text="tienes:" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" FontFamily="Noto Sans" FontSize="16" Foreground="#FF79A386" BorderBrush="{x:Null}" Background="{x:Null}" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="536,191,0,0" Text="x" TextWrapping="Wrap" VerticalAlignment="Top" Width="37" FontFamily="Noto Sans" FontSize="16" Foreground="#FF79A386" BorderBrush="{x:Null}" Background="{x:Null}" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="573,191,0,0" Text="tokens" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" FontFamily="Noto Sans" FontSize="16" Foreground="#FF79A386" BorderBrush="{x:Null}" Background="{x:Null}" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <Button Content="Demandar" HorizontalAlignment="Center" Height="30" Margin="0,235,0,0" VerticalAlignment="Top" Width="168" Background="#FFA5DAC9" BorderBrush="{x:Null}" Foreground="White" FontFamily="Noto Sans" FontSize="16"/>
        <Button Content="Pedir préstamo" HorizontalAlignment="Center" Height="30" Margin="0,286,0,0" VerticalAlignment="Top" Width="168" Background="#FFA5DAC9" BorderBrush="{x:Null}" Foreground="White" FontFamily="Noto Sans" FontSize="16"/>
    </Grid>
</Window>
